<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zikir1"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="60sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Subhanallah"
            android:textColor="#ffffff"
            android:background="#ffd24d"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="100dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zikir2"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="60sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Alhamdulillah"
            android:textColor="#ffffff"
            android:background="#4dd2ff"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="100dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zikir3"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="60sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Allahu Akbar"
            android:textColor="#ffffff"
            android:background="#79ff4d"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="100dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/rst"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Reset"
        android:textColor="#fff"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        />

</LinearLayout>
